{% extends 'base.html.twig' %}

{% block title %}Hopital | Docteurs{% endblock %}

{% block base_content %}

  <div class="card h-100" id="table" data-list='{"valueNames":["libelle","contact","adresse","email"],"page":10,"pagination":true,"fallback":"pages-table-fallback"}'>
  <div class="card-header">
    <div class="row flex-between-center">
      <div class="col-auto col-sm-6 col-lg-7">
        <h6 class="mb-0 text-nowrap py-2 py-xl-0 fs-2 text-primary">Docteurs

          <span class="fas fa-plus fs--1 text-600 " type="button" data-bs-toggle="modal"
            data-bs-target="#addDoctorModal"></span></h6>

        </h6>
      </div>
      <div class="col-auto col-sm-6 col-lg-5">
        <div class="h-100">
          <form>
            <div class="input-group"><input class="form-control form-control-sm shadow-none search" type="search"
                placeholder="Search for a page" aria-label="search" />
              <div class="input-group-text bg-transparent"><span class="fa fa-search fs--1 text-600"></span></div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
  <div class="card-body px-0 py-0">
    <div class="table-responsive scrollbar">

      <table class="table table-bordered table-striped fs--1 mb-0">
        <thead class="bg-200 text-900">
          <tr>
            <th class="sort" data-sort="libelle">Nom & Prenom</th>
            <th class="sort" data-sort="contact">Contact </th>
            <th class="sort" data-sort="adresse">Adresse </th>
            <th class="sort" data-sort="email">Email </th>
            <th class="sort" data-sort="action">Action</th>
          </tr>
        </thead>
        <tbody class="list">

          {% for medecin in medecins %}
          <tr>
            <td class="nom">{{ medecin.nom }} {{ medecin.prenom }}</td>
            <td class="contact">{{ medecin.contact }}</td>
            <td class="adresse">{{ medecin.adresse }}</td>
            <td class="email"></td>
            
            <td class="text-end">
              <div>

                <button class="btn p-0 btnEditRow" data-row-id="{{ medecin.id }}" type="button" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier">
                  <span
                    class="text-500 fas fa-edit"></span>
                </button>

                <button class="btn p-0 ms-2 btnDeleteRow" data-row-id="{{ medecin.id }}" data-row-name="{{ medecin.nom }}" type="button" data-bs-toggle="tooltip"
                  data-bs-placement="top" title="Supprimer"><span class="text-500 fas fa-trash-alt"></span>
                </button>
              
                </div>
            </td>
          </tr>

          {% endfor %}

        </tbody>
      </table>

    </div>
    <div class="text-center d-none" id="pages-table-fallback">
      <p class="fw-bold fs-1 mt-3">Aucun medecin ne correspond à votre recherche</p>
    </div>
  </div>
  <div class="card-footer">
    <div class="row align-items-center">
      <div class="pagination d-none"></div>
      <div class="col">
        <p class="mb-0 fs--1"><span class="d-none d-sm-inline-block me-2" data-list-info="data-list-info"></span></p>
      </div>
      <div class="col-auto d-flex"><button class="btn btn-sm btn-primary" type="button"
          data-list-pagination="prev"><span>Previous</span></button><button class="btn btn-sm btn-primary px-4 ms-2"
          type="button" data-list-pagination="next"><span>Next</span></button></div>
    </div>
  </div>
</div>

<div class="modal fade" id="addDoctorModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content border">

      <div class="modal-header px-card bg-primary border-bottom-0">
        <h5 class="modal-title text-white">Creer un utilisateur</h5><button class="btn-close me-n1" type="button" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>

      <div class="modal-body p-card">

        <div class="mb-3">
          <label class="fs-0" for="fnDoctorNom">Nom</label>
          <input class="form-control" type="text" id="fnDoctorNom" required="required" />
        </div>

        <div class="mb-3">
          <label class="fs-0" for="fnDoctorPrenom">Prenom</label>
          <input class="form-control" type="text" id="fnDoctorPrenom" required="required" />
        </div>

        <div class="mb-3">
          <label class="fs-0" for="fnDoctorTel">Contact</label>
          <input class="form-control" type="text" id="fnDoctorTel" required="required" />
        </div>

        <div class="mb-3">
          <label class="fs-0" for="fnDoctorAdresse">Adresse</label>
          <input class="form-control" type="text" id="fnDoctorAdresse" required="required" />
        </div>

      </div>

      <div class="card-footer d-flex flex-column bg-light">
        <button class="btn btn-primary px-4 " id="btnCreateDoctor" type="button">Enregistrer</button>
      </div>

    </div>

  </div>

</div>


<div class="modal fade" id="editDoctorModal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content border">

      <div class="modal-header px-card bg-primary border-bottom-0">
        <h5 class="modal-title text-white">Modifier un medecin</h5><button class="btn-close me-n1" type="button" data-bs-dismiss="modal"
          aria-label="Close"></button>
      </div>

      <div class="modal-body p-card">

      <input class="form-control" type="text" id="feDoctorId" required="required" hidden/>

        <div class="mb-3">
          <label class="fs-0" for="feDoctorNom">Nom</label>
          <input class="form-control" type="text" id="feDoctorNom" required="required" />
        </div>

        <div class="mb-3">
          <label class="fs-0" for="feDoctorPrenom">Prenom </label>
          <input class="form-control" type="text" id="feDoctorPrenom" required="required" />
        </div>

        <div class="mb-3">
          <label class="fs-0" for="feDoctorTel">Contact </label>
          <input class="form-control" type="text" id="feDoctorTel" required="required" />
        </div>

        <div class="mb-3">
          <label class="fs-0" for="feDoctorAdresse">Adresse</label>
          <input class="form-control" type="text" id="feDoctorAdresse" required="required" />
        </div>


      </div>

      <div class="card-footer d-flex flex-column bg-light">
        <button class="btn btn-primary px-4 " id="btnUpdateDoctor" type="button">Mise à jour</button>
      </div>

    </div>

  </div>

</div>
      


    
    
    {% endblock %}
{% block addjs %}


  <script>

  $(function() {

   
      let btnCreateDoctor = $('#btnCreateDoctor'), btnUpdateDoctor = $('#btnUpdateDoctor'),feDoctorId = $('#feDoctorId'),feDoctorNom = $('#feDoctorNom'), feDoctorPrenom = $('#feDoctorPrenom'),feDoctorTel = $('#feDoctorTel'), feDoctorAdresse = $('#feDoctorAdresse')
       
      

    

    function createDoctor() {
        let form = JSON.stringify({
            nom: $('#fnDoctorNom').val(),
            prenom: $('#fnDoctorPrenom').val(),
            tel: $('#fnDoctorTel').val(),
            adresse: $('#fnDoctorAdresse').val(),
        
        })

        console.log("form", form)
        requestPost('{{ path('doctors_ctrl_create') }}', form, '.fnDoctor', '#btnCreateDoctor').then(() => {
            iziToast.destroy();
          
            iziToast.success({
                title: 'Succès',
                message: "Le medecin a été créé avec succès",
                position: 'topRight',
            });
            location.reload();
           
        }); 
    }
    function updateDoctor() {
        let form = JSON.stringify({
            id: feUserId.val(),
            username: feUserUsername.val(),
            role: feUserRole.val(),
        })
        requestPost('{{ path('doctors_ctrl_update') }}', form, '.feDoctor', '#btnUpdateDoctor').then(() => {
            iziToast.destroy();
            iziToast.success({
                title: 'Succès',
                message: "Le role a été modifié avec succès",
                position: 'topRight',
            });
            location.reload();

           // Turbolinks.visit(window.location.toString());
        });
    }
    btnCreateDoctor.on('click', function (){
      
        createDoctor();
    });
    btnUpdateDoctor.on('click', function (){
        updateDoctor();
    });
    $('.btnEditRow').on('click', function (){
        let dataRowId = $(this).data('row-id');
        requestGet('{{ path('doctors_ctrl_find') }}?code=' + dataRowId).then((data) => {
            
            console.log("role",data )
            feDoctorId.val(data.id);
            feDoctorNom.val(data.nom);
            feDoctorPrenom.val(data.prenom);
            feDoctorTel.val(data.tel);
            feDoctorAdresse.val(data.adresse);
           
            $('#editDoctorModal').modal('show');
        });
    });
    $('.btnDeleteRow').on('click', function (){
        let dataRowId = $(this).data('row-id');
        let dataRowName = $(this).data('row-name');
        Swal.fire({
            title: "Supprimer la ligne ?", text: dataRowName,
            icon: "question",
            showCloseButton: true,
            showCancelButton: true,
            focusConfirm: false,
            confirmButtonText: 'Supprimer',
            cancelButtonText: 'Fermer'
        }).then((result) => {
            if (result.isConfirmed) {
                requestGet('{{ path('doctors_ctrl_delete') }}?code=' + dataRowId).then(() => {
                    iziToast.destroy();
                    iziToast.success({
                        title: 'Succès',
                        message: "Le role a été supprimé avec succès",
                        position: 'topRight',
                    });
            location.reload();

                 //   Turbolinks.visit(window.location.toString());
                });
            }
        });
    });


  })
</script>

{% endblock %}